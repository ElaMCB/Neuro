{
  "name": "neuro-language",
  "displayName": "Neuro Language Support",
  "description": "Syntax highlighting and language support for Neuro - the intent-driven AI language",
  "version": "0.1.0",
  "publisher": "neuro",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElaMCB/Neuro"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "neuro",
    "ai",
    "machine learning",
    "intent-driven",
    "dsl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "neuro",
        "aliases": ["Neuro", "neuro"],
        "extensions": [".neuro"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/neuro-icon.png",
          "dark": "./icons/neuro-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "neuro",
        "scopeName": "source.neuro",
        "path": "./syntaxes/neuro.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "neuro",
        "path": "./snippets/neuro.json"
      }
    ]
  },
  "icon": "icons/neuro-icon.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  }
}

