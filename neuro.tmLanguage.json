{
  "name": "Neuro",
  "scopeName": "source.neuro",
  "fileTypes": ["neuro"],
  "patterns": [
    {
      "comment": "Pipeline declaration",
      "match": "\\b(pipeline)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\{",
      "captures": {
        "1": { "name": "keyword.control.neuro" },
        "2": { "name": "entity.name.type.neuro" }
      }
    },
    {
      "comment": "Keywords",
      "match": "\\b(goal|data|model|constraints|actions|deploy|input|output|filters|target_roles|locations|skills|experience|company_policy|targets)\\b",
      "name": "keyword.other.neuro"
    },
    {
      "comment": "String literals",
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.neuro"
    },
    {
      "comment": "Comments - single line",
      "match": "//.*$",
      "name": "comment.line.double-slash.neuro"
    },
    {
      "comment": "Comments - block",
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.neuro"
    },
    {
      "comment": "Numbers",
      "match": "\\b([0-9]+\\.?[0-9]*)\\b",
      "name": "constant.numeric.neuro"
    },
    {
      "comment": "Booleans",
      "match": "\\b(true|false)\\b",
      "name": "constant.language.neuro"
    },
    {
      "comment": "Operators",
      "match": "(->|:|\\{|\\}|\\[|\\]|,|>|<|=)",
      "name": "keyword.operator.neuro"
    },
    {
      "comment": "Function calls",
      "match": "\\b([a-z_][a-z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.neuro" }
      }
    }
  ]
}

